{
	"name": "mari-bridge",
	"displayName": "MariBridge",
	"description": "Run code from your editor directly in Mari",
	"publisher": "pepperusso",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/peppe-russo/mari-bridge"
	},
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"mari",
		"command",
		"port"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onCommand:mari-bridge.runInMari",
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mari-bridge.runInMari",
				"title": "Run in Mari"
			}
		],
		"configuration": {
			"title": "MariBridge",
			"properties": {
				"mari-bridge.host": {
					"type": "string",
					"default": "localhost"
				},
				"mari-bridge.port": {
					"type": "number",
					"default": 6100
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vsce": "^1.88.0",
		"vscode-test": "^1.5.0"
	}
}
